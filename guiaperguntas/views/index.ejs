<%- include('partials/header.ejs')%>
<body>
    <%- include('partials/navbar.ejs')%>
    <div class="container">
        <hr>
        <h1>Questions</h1>
        <hr>
        <a href="/toask" class="btn btn-primary">To Ask</a>
        <hr>
        <% asks.forEach(ask => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= ask.title%></h3>
                </div>
                <div class="card-footer">
                    <a  href="/toask/<%= ask.id%>"><button class="btn btn-primary">Answer</button></a>
                </div>
            </div> 
        <%}) %>
    </div>
</body>
<%- include('partials/footer.ejs')%>
